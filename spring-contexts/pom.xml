	<artifactId>spring-contexts</artifactId>
	<version>1.0-SNAPSHOT</version>
	<name>SpringContext Application</name>
	<url>http://github.com/thenewcircle/SpringContexts</url>
	<description>
	  Simple Spring Context Demonstration
	</description>
	<inceptionYear>2014</inceptionYear>
	<organization>
		<name>NewCircle, Inc.</name>
		<url>http://thenewcircle.com/</url>
	</organization>

	<developers>
