			<id>gordonforce</id>
			<name>GordonForce</name>
			<email>gordon(at)thenewcircle(dot)com</email>
			<organization>NewCircle, Inc.</organization>
			<roles>
				<role>Project lead</role>
			</roles>
			<timezone>-7</timezone>
		</developer>
